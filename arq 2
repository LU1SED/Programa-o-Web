		<label for="email">E-mail:</label>
		<input type="email" id="email" name="email" required>
		<br>
		<!-- Caixa de seleção para assunto -->
		<label for="assunto">Assunto:</label>
		<select id="assunto" name="assunto">
			<option value="duvida">Dúvida</option>
			<option value="sugestao">Sugestão</option>
			<option value="reclamacao">Reclamação</option>
		</select>
		<br>
		<!-- Botões de opção para tipo de produto -->
		<label for="tenis-masculino">Tênis Masculino:</label>
		<input type="radio" id="tenis-masculino" name="tipo-produto" value="masculino">
		<label for="tenis-feminino">Tênis Feminino:</label>
		<input type="radio" id="tenis-feminino" name="tipo-produto" value="feminino">
		<br>
		<!-- Campo de entrada de texto para mensagem -->
		<label for="mensagem">Mensagem:</label>
